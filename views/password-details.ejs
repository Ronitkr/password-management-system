<%- include('header') %>

<div class="container">
        <div class="card mt-5">
            <div class="card-header text-white bg-info">
                  <center><b><%= title %></b></center>
            </div>
            <div class="card-body">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Project name</th>
                            <th scope="col">Category</th>
                            <th colspan="3">Action</th>
                            </tr>
                    </thead>
                    <tbody>

                        <% if(record.length > 0){
                            record.forEach(function(row){  
                        %>
                        <tr>
                            <td><%= row.pass_project_name %></td>
                            <td><%= row.pass_category %></td>
                            <td><a href="" class="text-success" data-toggle="modal" data-target="#myModal<%= row._id %>">view</a></td>
                            <td><a href="/users/password-details/edit/<%= row._id %>" class="text-danger">edit</a></td>
                            <td><a href="/users/password-details/delete/<%= row._id %>" class="text-danger">Delete</a></td>
                        </tr>
                        <!-- Modal -->
  <div class="modal fade" id="myModal<%= row._id %>" role="dialog">
        <div class="modal-dialog">
        
          <!-- Modal content-->
          <div class="modal-content">
            <div class="modal-header">
              
              <h4 class="modal-title"><%= row.pass_project_name %></h4>
              <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <%- row.pass_details %>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
          </div>
          
        </div>
      </div>
                         <% }) }%>     
                    </tbody>
                </table>             
                <% if (pages > 0) { %>
                  <ul class="pagination text-center">
                      <% if (current == 1) { %>
                          <li class="disabled"><a>First</a></li>
                      <% } else { %>
                          <li><a href="/users/password-details/1">First</a></li>
                      <% } %>
                      <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
                      <% if (i !== 1) { %>
                          <li class="disabled"><a>...</a></li>
                      <% } %>
                      <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
                          <% if (i == current) { %>
                              <li class="active"><a><%= i %></a></li>
                          <% } else { %>
                              <li><a href="/users/password-details/<%= i %>"><%= i %></a></li>
                          <% } %>
                          <% if (i == Number(current) + 4 && i < pages) { %>
                              <li class="disabled"><a>...</a></li>
                          <% } %>
                      <% } %>
                      <% if (current == pages) { %>
                          <li class="disabled"><a>Last</a></li>
                      <% } else { %>
                          <li><a href="/users/password-details/<%= pages %>">Last</a></li>
                      <% } %>
                  </ul>
              <% } %>
            </div>
        </div>
</div>

<%- include('footer') %>
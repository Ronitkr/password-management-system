<%- include('header') %>

<div class="container">
        <div class="card mt-5">
            <div class="card-header text-white bg-info">
                  <center><b><%= title %></b></center>
            </div>
            <div class="card-body">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Category</th>                            
                            <th colspan="2">Action</th>
                            </tr>
                    </thead>
                    <tbody>
                        
                        <% if(records.length>0) { 
                            
                            records.forEach(function(row){    
                        %>
                        <tr>
                            <th scope="row">#</th>
                            <td><%= row.pass_category %></td>
                            <td><a href="/users/password_category_list/edit/<%= row._id %>" class="text-success">edit</a> | <a href="/users/password_category_list/delete/<%= row._id %>" class="text-danger">Delete</a></td>
                            
                        </tr>
                        <% }) } %>
                              
                    </tbody>
                </table>             
                
            </div>
        </div>
</div>

<%- include('footer') %>
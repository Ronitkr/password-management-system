<%- include('header') %>

<div class="container">
    <div class="row" style="margin: 15% 0 0 0">
            <div class="col-md-4"></div>
            <div class="col-md-4">
                    <div class="card">
                            <div class="card-header bg-info text-white">
                              <center><b>Add Password Category</b></center>
                                <center class="bg-danger">
                                    <% if(errors != '') { %>
                                      <%= errors.addPwdCategory.msg %> 
                                    <% } %> 
                                </center>  
                                
                                <% if(success != '') { %>
                                  <center class="alert alert-success"><%= success %> </center> 
                                <% } %> 
                                  
                            </div>
                            
                            <div class="card-body">
                              <form action="/users/add-category" method="POST">
                                    <input type="text" class="form-control" name="addPwdCategory" id="add-pwd-category" placeholder="ex: godaddy, mobile">
                                    <button type="submit" class="btn btn-success mt-2 w-100">Submit</button>  
                              </form>
                            </div>
                    </div>        
                          </div>
            </div>
            <div class="col-md-4"></div>
    </div>
    
</div>



<%- include('footer') %>



              